generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["betterauth", "public"]
}

model user {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          String?   @default("user")
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  accounts      account[]
  sessions      session[]

  @@schema("betterauth")
}

model session {
  id             String   @id
  expiresAt      DateTime
  token          String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String?
  authUser       user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@schema("betterauth")
}

model account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  authUser              user      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@schema("betterauth")
}

model verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@schema("betterauth")
}

model MentorProfile {
  id                  String                     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId              String?                    @unique @db.Uuid
  displayName         String
  title               String?
  organization        String?
  headshotUrl         String?
  bio                 String?
  experienceStartYear DateTime?
  socials             Json?
  slug                String                     @unique
  isActive            Boolean                    @default(true)
  createdAt           DateTime                   @default(now())
  updatedAt           DateTime                   @updatedAt
  courses             CourseMentor[]
  user                AppUser?                   @relation(fields: [userId], references: [id])
  translations        MentorProfileTranslation[]

  @@schema("public")
}

model CourseMentor {
  courseId  String        @db.Uuid
  mentorId  String        @db.Uuid
  role      MentorRole    @default(PRIMARY)
  sortOrder Int           @default(0)
  createdAt DateTime      @default(now())
  Course    Course        @relation(fields: [courseId], references: [id], onDelete: Cascade)
  Mentor    MentorProfile @relation(fields: [mentorId], references: [id], onDelete: Cascade)

  @@id([courseId, mentorId])
  @@index([mentorId, sortOrder])
  @@schema("public")
}

model MentorProfileTranslation {
  id          String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  mentorId    String        @db.Uuid
  locale      String
  displayName String?
  title       String?
  bio         String?
  Mentor      MentorProfile @relation(fields: [mentorId], references: [id], onDelete: Cascade)

  @@unique([mentorId, locale])
  @@index([locale])
  @@schema("public")
}

model AppUser {
  id              String                   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstname       String
  lastname        String
  createdAt       DateTime                 @default(now())
  betterAuthId    String                   @unique
  image           String?
  stripeId        String?
  isSuperAdmin    Boolean                  @default(false)
  locale          String?                  @default("en")
  claps           Clap[]
  comments        Comment[]
  eventsCreated   Event[]
  eventAttendees  EventAttendee[]
  group           Group[]
  membership      Members[]
  mentorProfile   MentorProfile?
  message         Message[]
  pointActivities PointActivity[]
  posts           Post[]
  progress        UserCourseProgress[]
  userPoints      UserPoints[]
  sectionProgress UserSectionProgress[]
  quizAttempts    UserSectionQuizAttempt[]
  reflections     UserSectionReflection[]

  @@map("User")
  @@schema("public")
}

model Subscription {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now())
  price     Int?
  active    Boolean  @default(false)
  groupId   String?  @db.Uuid
  Group     Group?   @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model Group {
  id              String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name            String             @unique
  category        String
  thumbnail       String?
  description     String?
  gallery         String[]
  jsonDescription String?
  htmlDescription String?
  icon            String?
  privacy         GROUP_PRIVACY      @default(PRIVATE)
  active          Boolean            @default(false)
  createdAt       DateTime           @default(now())
  userId          String             @db.Uuid
  domain          String?
  slug            String             @unique
  affiliate       Affiliate?
  channel         Channel[]
  courses         Course[]
  events          Event[]
  User            AppUser            @relation(fields: [userId], references: [id], onDelete: Cascade)
  translations    GroupTranslation[]
  member          Members[]
  pointActivities PointActivity[]
  subscription    Subscription[]
  userPoints      UserPoints[]

  @@schema("public")
}

model Members {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String    @db.Uuid
  groupId   String    @db.Uuid
  createdAt DateTime  @default(now())
  role      GroupRole @default(MEMBER)
  Group     Group     @relation(fields: [groupId], references: [id])
  User      AppUser   @relation(fields: [userId], references: [id])

  @@unique([userId, groupId])
  @@index([userId, groupId])
  @@schema("public")
}

model Post {
  id           String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  content      Json
  htmlContent  String
  authorId     String            @db.Uuid
  channelId    String            @db.Uuid
  title        String
  jsonContent  String
  publicId     String            @unique
  claps        Clap[]
  comments     Comment[]
  author       AppUser           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  channel      Channel           @relation(fields: [channelId], references: [id], onDelete: Cascade)
  translations PostTranslation[]

  @@schema("public")
}

model Clap {
  id        String   @id(map: "Like_pkey") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now())
  postId    String?  @db.Uuid
  userId    String   @db.Uuid
  count     Int      @default(1)
  commentId String?  @db.Uuid
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade, map: "Like_postId_fkey")
  user      AppUser  @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Like_userId_fkey")

  @@unique([postId, userId], name: "postId_userId")
  @@unique([commentId, userId], name: "commentId_userId")
  @@schema("public")
}

model Comment {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime  @default(now())
  content   String
  postId    String    @db.Uuid
  userId    String    @db.Uuid
  commentId String?   @db.Uuid
  replied   Boolean?  @default(false)
  claps     Clap[]
  Comment   Comment?  @relation("CommentToComment", fields: [commentId], references: [id])
  reply     Comment[] @relation("CommentToComment")
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      AppUser   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model Channel {
  id        String   @id @db.Uuid
  name      String
  icon      String
  createdAt DateTime @default(now())
  groupId   String?  @db.Uuid
  slug      String
  Group     Group?   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  posts     Post[]

  @@unique([groupId, slug])
  @@schema("public")
}

model Course {
  id               String               @id @db.Uuid
  name             String
  thumbnail        String
  published        Boolean              @default(false)
  privacy          String
  description      String
  createdAt        DateTime             @default(now())
  groupId          String?              @db.Uuid
  faq              Json?
  learnOutcomes    Json?
  level            journey_level?
  isDeleted        Boolean              @default(false) @map("is_deleted")
  slug             String               @unique(map: "course_slug_unique_idx")
  target_audience  String?
  status           String?
  prerequisites    String[]             @default([])
  tags             String[]             @default([])
  estimatedMinutes Int?
  Group            Group?               @relation(fields: [groupId], references: [id], onDelete: Cascade)
  mentors          CourseMentor[]
  translations     CourseTranslation[]
  modules          Module[]
  progress         UserCourseProgress[]

  @@schema("public")
}

model Module {
  id                 String              @id @db.Uuid
  courseId           String?             @db.Uuid
  title              String
  createdAt          DateTime            @default(now())
  order              Int                 @default(0)
  slug               String?             @unique(map: "module_slug_unique_idx")
  subtitle           String?
  difficulty         String?
  learningObjectives String[]            @default([])
  estimatedMinutes   Int?
  Anchor             Anchor[]
  Course             Course?             @relation(fields: [courseId], references: [id], onDelete: Cascade)
  translations       ModuleTranslation[]
  section            Section[]

  @@index([courseId, order])
  @@schema("public")
}

model Section {
  id           String                   @id @db.Uuid
  moduleId     String?                  @db.Uuid
  name         String                   @default("New Section")
  icon         String                   @default("doc")
  content      String?
  htmlContent  String?
  jsonContent  Json?
  createdAt    DateTime                 @default(now())
  order        Int                      @default(0)
  type         content_block_type?
  anchorIds    String[]                 @default([])
  blockPayload Json?
  publicId     String                   @unique
  Module       Module?                  @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  translations SectionTranslation[]
  userProgress UserSectionProgress[]
  quizAttempts UserSectionQuizAttempt[]
  reflections  UserSectionReflection[]

  @@index([moduleId, order])
  @@index([type], map: "section_type_idx")
  @@schema("public")
}

model UserCourseProgress {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String   @db.Uuid
  courseId          String   @db.Uuid
  lastModuleId      String?  @db.Uuid
  lastSectionId     String?  @db.Uuid
  completedSections String[] @default([])
  progress          Float    @default(0)
  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())
  isComplete        Boolean  @default(false)
  Course            Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  User              AppUser  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId, progress, updatedAt])
  @@index([courseId])
  @@schema("public")
}

model UserSectionProgress {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String   @db.Uuid
  sectionId         String   @db.Uuid
  locale            String?
  completed         Boolean  @default(false)
  progressPct       Float    @default(0)
  lastVisited       DateTime @default(now())
  lastScorePct      Float?
  passed            Boolean?
  lastQuizAttemptId String?  @db.Uuid
  lastReflectionId  String?  @db.Uuid
  data              Json?
  updatedAt         DateTime @updatedAt
  Section           Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  User              AppUser  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, sectionId, locale])
  @@index([userId, sectionId])
  @@index([sectionId, updatedAt])
  @@schema("public")
}

model UserSectionQuizAttempt {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId           String   @db.Uuid
  sectionId        String   @db.Uuid
  locale           String?
  attemptNo        Int
  selectedIndexes  Int[]
  correctCount     Int
  totalQuestions   Int
  scorePct         Float
  passed           Boolean
  quizSnapshotJson Json
  durationMs       Int?
  submittedAt      DateTime @default(now())
  Section          Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  User             AppUser  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, sectionId, attemptNo])
  @@index([userId, sectionId, submittedAt])
  @@index([sectionId, submittedAt])
  @@schema("public")
}

model UserSectionReflection {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId           String   @db.Uuid
  sectionId        String   @db.Uuid
  locale           String?
  responseText     String
  charCount        Int
  promptSnapshot   String?
  guidanceSnapshot String?
  savedAt          DateTime @default(now())
  updatedAt        DateTime @updatedAt
  Section          Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  User             AppUser  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, sectionId, locale])
  @@index([userId, sectionId, updatedAt])
  @@index([sectionId, updatedAt])
  @@schema("public")
}

model Affiliate {
  id        String   @id @db.Uuid
  groupId   String   @unique @db.Uuid
  createdAt DateTime @default(now())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model Message {
  id         String   @id @db.Uuid
  createdAt  DateTime @default(now())
  message    String
  senderId   String?  @db.Uuid
  receiverId String?  @db.Uuid
  sender     AppUser? @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model GroupTranslation {
  id              String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  groupId         String  @db.Uuid
  locale          String
  name            String?
  descriptionJson Json?
  descriptionHtml String?
  Group           Group   @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, locale])
  @@index([locale])
  @@schema("public")
}

model CourseTranslation {
  id              String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  courseId        String  @db.Uuid
  locale          String
  name            String?
  description     String?
  faq             Json?
  learnOutcomes   Json?
  target_audience String?
  Course          Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([courseId, locale])
  @@index([locale])
  @@schema("public")
}

model ModuleTranslation {
  id                 String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  moduleId           String  @db.Uuid
  locale             String
  title              String?
  subtitle           String?
  learningObjectives Json?
  Module             Module  @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([moduleId, locale])
  @@index([locale])
  @@schema("public")
}

model SectionTranslation {
  id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sectionId   String  @db.Uuid
  locale      String
  name        String?
  contentJson Json?
  contentHtml String?
  contentText String?
  Section     Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([sectionId, locale])
  @@index([locale])
  @@schema("public")
}

model PostTranslation {
  id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  postId      String  @db.Uuid
  locale      String
  title       String?
  contentJson Json?
  contentHtml String?
  Post        Post    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, locale])
  @@index([locale])
  @@schema("public")
}

model Anchor {
  id         String   @id @db.Uuid
  shortLabel String   @unique
  title      String
  excerpt    String
  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  moduleId   String?  @db.Uuid
  Module     Module?  @relation(fields: [moduleId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([moduleId])
  @@schema("public")
}

model UserPoints {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid
  groupId   String   @db.Uuid
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  User      AppUser  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([groupId, points(sort: Desc)])
  @@schema("public")
}

model PointActivity {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String       @db.Uuid
  groupId      String       @db.Uuid
  activityType ActivityType
  points       Int
  referenceId  String?      @db.Uuid
  description  String?
  createdAt    DateTime     @default(now())
  Group        Group        @relation(fields: [groupId], references: [id], onDelete: Cascade)
  User         AppUser      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, groupId, createdAt])
  @@index([groupId, createdAt])
  @@schema("public")
}

model Event {
  id           String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  groupId      String          @db.Uuid
  createdById  String          @db.Uuid
  title        String
  description  String?
  eventType    EventType
  startTime    DateTime
  endTime      DateTime?
  timezone     String          @default("UTC")
  location     String?
  meetingUrl   String?
  thumbnail    String?
  isPublished  Boolean         @default(false)
  maxAttendees Int?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  CreatedBy    AppUser         @relation(fields: [createdById], references: [id], onDelete: Cascade)
  Group        Group           @relation(fields: [groupId], references: [id], onDelete: Cascade)
  attendees    EventAttendee[]

  @@index([groupId, startTime])
  @@index([groupId, isPublished, startTime])
  @@schema("public")
}

model EventAttendee {
  id        String              @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  eventId   String              @db.Uuid
  userId    String              @db.Uuid
  status    EventAttendeeStatus @default(REGISTERED)
  createdAt DateTime            @default(now())
  Event     Event               @relation(fields: [eventId], references: [id], onDelete: Cascade)
  User      AppUser             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([userId, eventId])
  @@schema("public")
}

enum MentorRole {
  PRIMARY
  CO_AUTHOR
  GUEST
  TA

  @@schema("public")
}

enum GROUP_PRIVACY {
  PUBLIC
  PRIVATE

  @@schema("public")
}

enum GroupRole {
  OWNER
  ADMIN
  MODERATOR
  INSTRUCTOR
  MEMBER

  @@schema("public")
}

enum content_block_type {
  concept
  example
  case_study
  interactive
  quiz
  reflection
  callout
  anchor

  @@schema("public")
}

enum journey_level {
  beginner
  intermediate
  advanced

  @@schema("public")
}

enum ActivityType {
  POST_CREATED
  COMMENT_CREATED
  COURSE_COMPLETED
  SECTION_COMPLETED
  QUIZ_PASSED
  EVENT_ATTENDED
  DAILY_LOGIN
  CLAP_RECEIVED
  COMMENT_CLAP_RECEIVED

  @@schema("public")
}

enum EventType {
  LIVE_CLASS
  WEBINAR
  WORKSHOP
  QA_SESSION
  MEETUP
  OTHER

  @@schema("public")
}

enum EventAttendeeStatus {
  REGISTERED
  ATTENDED
  CANCELLED

  @@schema("public")
}
